<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_summary_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="64dp"
        android:background="@color/divider"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/stranger_end_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/content_margin"
        android:layout_marginEnd="80dp"
        android:text="  "/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/stranger_end_text"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:layout_marginStart="@dimen/content_margin"
        android:layout_marginEnd="90dp"
        android:text=""/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/upload_stranger_registrations_btn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_shift"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="@string/upload_registrations"
        android:textColor="@color/white" />



</LinearLayout>